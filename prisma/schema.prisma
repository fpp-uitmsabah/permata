generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Faculty {
  id           String   @id @default(cuid())
  name         String
  title        String?
  department   String?
  email        String?  @unique
  phone        String?
  expertise    String[]
  bio          String?
  imageUrl     String?
  profileUrl   String?
  employeeId   String?  @unique
  secretCode   String?
  googleEmail  String?
  canEdit      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Social Media Relations
  likes        Like[]
  comments     Comment[]
  followers    Follow[] @relation("FollowingFaculty")

  @@map("faculties")
}

model Like {
  id          String   @id @default(cuid())
  facultyId   String
  faculty     Faculty  @relation(fields: [facultyId], references: [id], onDelete: Cascade)
  userId      String   // Can be anonymous or authenticated user ID
  userName    String?  // Optional name for anonymous users
  reactionType String  @default("like") // like, love, insightful, celebrate
  createdAt   DateTime @default(now())

  @@unique([facultyId, userId])
  @@map("likes")
}

model Comment {
  id          String   @id @default(cuid())
  facultyId   String
  faculty     Faculty  @relation(fields: [facultyId], references: [id], onDelete: Cascade)
  userId      String   // Can be anonymous or authenticated user ID
  userName    String   // Display name
  userEmail   String?  // Optional email
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("comments")
}

model Follow {
  id          String   @id @default(cuid())
  facultyId   String
  faculty     Faculty  @relation("FollowingFaculty", fields: [facultyId], references: [id], onDelete: Cascade)
  userId      String   // Follower's user ID
  userName    String   // Follower's name
  userEmail   String?  // Follower's email
  createdAt   DateTime @default(now())

  @@unique([facultyId, userId])
  @@map("follows")
}
